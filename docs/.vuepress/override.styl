$accentColor = #4fc08d
$codeBgColor = #fafbfc

.home .footer
    display: none

.content pre code, .content pre[class*="language-"] code
    color: #525252!important

.hero img
    width: 100%
    max-height: 100%!important

div[class*="language-"]::before
    color: #55555578 !important
    font-weight: bold
.custom-block a{
    color: $accentColor!important
}
.custom-block.tip, .custom-block.warning, .custom-block.danger
    background-color: #fff!important
    color: #525252!important

.custom-block.tip, .custom-block.warning, .custom-block.danger
    border-left-width: .3rem!important
    padding: 0 1.5rem!important

.token.selector, .token.important, .token.atrule, .token.keyword, .token.builtin
    color: #d63200!important

.token.string, .token.char, .token.attr-value, .token.regex, .token.variable
    color: #42b983!important

.token.tag, .token.attr-name, .token.namespace, .token.deleted
    color: #f75f63!important

.token.operator, .token.entity, .token.url
    color: #525252!important

.content code
    color: #d63200!important

.reco-date
    display: none!important

.navbar .site-name
    font-weight: 700
    font-size: 2rem
hr
    display: none
.navbar
    box-shadow: none!important
    border-bottom: 1px solid #9e9e9e26
@media only screen and (max-width:1024px) and (min-height:320px)
    .toc-container-reset
        position: static!important
        top: auto!important
        left: auto!important
        transform: none!important
    .sn-title .title
        font-size: 1rem!important
    .item
        display: flex
        justify-content: center
        align-items: center
        flex-wrap: wrap
        flex-direction: column
        padding: .6rem!important
        border: 1px solid #f5f5f5
        border-radius: .2rem
        margin: .2rem!important
        width: 47%!important
        box-sizing: border-box
        .icon
            font-size: 1rem!important
        .desc
            font-size: .6rem!important
            height: 2rem
            overflow: hidden
            text-overflow: ellipsis
            display: -webkit-box
            -webkit-box-orient: vertical
            -webkit-line-clamp: 2
        .text
            font-size: .6rem!important
            font-weight: normal
            margin: 0
