.vssue-comments
  .vssue-comment
    margin 15px 0
    &.vssue-comment-edit-mode
      .vssue-comment-main
        box-shadow 0 0 1px 1px lighten($vssue-theme-color, 50%)
    &.vssue-comment-disabled
      pointer-events none
      .vssue-comment-body
        background-color lighten($vssue-border-color, 70%)
    .vssue-comment-avatar
      float left
      width 50px
      height 50px
      img
        width 50px
        height 50px
    .vssue-comment-body
      @media screen and (max-width $vssue-breakpoint-mobile)
        margin-left 60px
      @media screen and (min-width $vssue-breakpoint-mobile + 1px)
        margin-left 70px
      border 1px solid $vssue-border-color
      border-radius 5px
      .vssue-comment-header
        padding 10px 15px
        border-bottom 1px solid $vssue-border-color
        overflow hidden
        .vssue-comment-created-at
          float right
          cursor default
          color $vssue-text-light-color
      .vssue-comment-main
        padding 15px
        .vssue-edit-comment-input
          resize none
          outline none
          border none
          width 100%
          background transparent
      .vssue-comment-footer
        padding 10px 15px
        border-top 1px solid $vssue-border-color
        overflow hidden
        .vssue-comment-hint
          cursor default
          color $vssue-text-light-color
        .vssue-comment-reactions
          .vssue-comment-reaction
            cursor pointer
            display inline-block
            margin-right 8px
            color $vssue-theme-color
        .vssue-comment-operations
          float right
          color $vssue-theme-color
          .vssue-comment-operation
            cursor pointer
            margin-left 8px
            &.vssue-comment-operation-muted
              color $vssue-text-light-color
              .vssue-icon
                fill $vssue-text-light-color
